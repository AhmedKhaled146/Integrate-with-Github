<% if @repository.present? %>
  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white">
        <h1 class="card-title text-center" style="font-size: 2.5rem; color: white;">
          <%= @repository[:name] %>
        </h1>
      </div>

      <div class="card-body">
        <p class="card-text" style="font-size: 1.2rem; color: #333;">
          <%= @repository[:description] %>
        </p>
        <p class="card-text">
          <strong>Stars: </strong>
            <%= @repository[:stargazerCount].to_i %>
        </p>

        <div class="mt-4">
          <%= link_to 'Back to Repositories', repositories_path, class: 'btn btn-outline-primary' %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-5">
    <p class="alert alert-danger">Repository not found.</p>
    <%= link_to 'Back to Repositories', repositories_path, class: 'btn btn-outline-primary' %>
  </div>
<% end %>
